<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SentryVersion>4.0.0-beta.1</SentryVersion>

    <SentryOrg>bruno-garcia</SentryOrg>
    <SentryProject>playground</SentryProject>
    <SentryUploadSymbols>true</SentryUploadSymbols>
    <SentryUploadSources>true</SentryUploadSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Sentry" Version="$(SentryVersion)" />
    <PackageReference Include="Sentry.Profiling" Version="$(SentryVersion)" />
  </ItemGroup>

</Project>
